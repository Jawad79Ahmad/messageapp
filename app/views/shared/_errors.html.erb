<% if obj.errors.any? %>
  <div class="ui error message" role="alert">
    <i class="close icon"></i>
    <h4 class="header">The following errors are precented to save a new article.</h4>
    <ul class="list">
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
<% end %>
